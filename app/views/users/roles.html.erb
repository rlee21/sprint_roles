<p id="notice"><%= notice %></p>

<div class="roles-container">
  <h2>Sprint Roles</h2>

  <table>
    <thead>
      <tr>
        <th><%="Name"%></th>
        <th><%="Role"%></th>
      </tr>
    </thead>

    <% @roles.each do |r| %>
      <tr>
        <td><%= r.first %></td>
        <td><%= r.last %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="pairs-container">
  <h2>Pairing Partners</h2>

  <table>
    <thead>
      <tr>
        <th><%="Pair1"%></th>
        <th><%="Pair2"%></th>
      </tr>
    </thead>

    <% @pairs.each do |r| %>
      <tr>
        <td><%= r.first %></td>
        <td><%= r.last %></td>
      </tr>
    <% end %>
  </table>
</div>
<br>

<div class="update-btn-container">
  <%= button_to 'Update', roles_users_path, class: "roles-btn" %><br>
</div>
